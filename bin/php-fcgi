#!/usr/bin/env perl
use strict;
use warnings;
# VERSION
# PODNAME: php-fcgi
# ABSTRACT: runs php under FCGI

use Daemon::Control;
use File::Spec v0.0.7;

=head1 SYNOPSIS

    php-fcgi [start|stop|restart|status]

=for test_synopsis
1;
__END__

=cut

my $dir = File::Spec->catdir( File::Spec->rootdir, qw{var run www-data-daemons} );
unless (-d $dir) {
    mkdir $dir;
    chown scalar getpwnam('www-data'), scalar getgrnam('www-data'), $dir;
}

$ENV{PHP_FCGI_CHILDREN} = 5;
$ENV{PHP_FCGI_MAX_REQUESTS} = 1000;
my $run_dir = File::Spec->catdir(qw( / var run www-data-daemons));

Daemon::Control->new({
    name        => 'php-fcgi',
    program     => '/usr/bin/php-cgi',
    program_args=> [-b => File::Spec->catfile($run_dir, 'php-fcgi.sock' )],
    fork        => 2,
    user        => 'www-data',
    group       => 'www-data',
    run_dir     => $run_dir,
    pid_file    => 'php-fcgi.pid', # will be relative to run_dir
    stdout_file => '/var/log/php-fcgi.log',
    stderr_file => '/var/log/php-fcgi.log',
    scan_name   => qr/php-cgi/,

    lsb_start   => '$nginx',
    lsb_stop    => '$nginx',
    lsb_sdesc   => 'Starts PHP under FCGI',
    lsb_desc    => 'Starts PHP under FCGI',
})->run;
